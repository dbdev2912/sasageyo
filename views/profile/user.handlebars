            <div class="profile-line">
                <div class="profile-link-container">
                    <a class="link"><span>{{post_count}}</span> Bài viết</a>
                </div>
                <div class="profile-link-container">
                    <a class="link" href="#"><span>{{followed}}</span> Theo dõi</a>
                </div>
                <div class="profile-link-container">
                    <a class="link" href="#">Đang theo dõi <span>{{following}}</span> người dùng</a>
                </div>
            </div>
            <div class="profile-line">
                <p class="profile-name">{{u_profile.name}}</p>
            </div>
            <div class="profile-line">
                <p class="profile-link">{{u_profile.website}}</p>
            </div>
        </div>
    </div>
    <div class="large-container profile-options-container">
        <div class="nav-container profile-options">
            <nav class="nav">
                <ul class="list-unstyled nav options">
                    <li class="option">
                        <a class="link active" href="/u/{{u_profile.user_token}}">Bài viết</a>
                    </li>
                    <li class="option">
                        <a class="link" href="#">Được gắn thẻ</a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="large-container posts" id="counter" current="">
            {{#each sample}}
            <div class="mini-container post">
                <div class="theme" post_id="{{post_id}}">
