                    </div>
                </button>
                <button class="follow-btn" style="margin-left: 5px"><span class="caret"></span></button>
                <button class="profile-change margin-none gear" style="
                                    position: relative;
                                    height:  16px;
                                "><span style="
                                    position: absolute;
                                    font-size: 28px;
                                    top: -7px;
                                ">...</span></button>

                {{else}}
                <button class="follow-btn" id="follow" self="{{profile.user_id}}" token="{{u_profile.user_token}}">Theo dõi người dùng này</button>
                {{/if}}
